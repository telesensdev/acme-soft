{
    "env": {
		"browser": true,
		"node": true,
        "commonjs": true,
		"es6": true,
		"jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2020
	},
	"globals": {
		"Swiper": true
    },
    "rules": {
        "indent": ["warn", 4],
		"linebreak-style": 0,
		"quotes": ["warn", "single"],
		"semi": ["warn", "always"],
		"no-loop-func": ["warn"],
		"no-empty": ["warn", {"allowEmptyCatch": true}],
		"comma-style": ["warn", "last"],
		"space-before-blocks": ["warn", "always"],
		"no-mixed-spaces-and-tabs": ["warn"],
		"no-unused-vars": ["warn"],
		"no-extra-semi": ["warn"],
        "no-console": ["warn"],
        "no-var": ["warn"]
	}
}